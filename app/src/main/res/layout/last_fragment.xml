<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#28B463"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text3"
        android:text="Choose The Options"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <ImageButton
        android:id="@+id/imgBTN1"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:src="@drawable/ic_account_circle_black_24dp"
        android:layout_below="@id/text3"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ImageButton>

    <ImageButton
        android:id="@+id/imgBTN2"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text3"
        android:layout_marginTop="9dp"
        android:layout_toRightOf="@id/imgBTN1"
        android:src="@drawable/ic_favorite_black_24dp">
    </ImageButton>

    <ImageButton
        android:id="@+id/imgBTN3"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text3"
        android:layout_marginTop="9dp"
        android:layout_toRightOf="@id/imgBTN2"
        android:src="@drawable/ic_forum_black_24dp">
    </ImageButton>

    <ImageButton
        android:id="@+id/imgBTN4"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text3"
        android:layout_marginTop="9dp"
        android:layout_toRightOf="@id/imgBTN3"
        android:src="@drawable/ic_important_devices_black_24dp">
    </ImageButton>

    <TextView
        android:id="@+id/text7"
        android:text="Thank You"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:textColor="#ffffff"
        android:layout_below="@id/imgBTN4"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

</RelativeLayout>